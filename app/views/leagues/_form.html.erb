<%= form_for(@league) do |f| %>

  <div class="form-group">
    <%= f.label :name, "League Name:" %>
    <%= f.text_field :name, placeholder: "My Rad League", autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :name, "Max Players:" %>
    <%= f.number_field :max_players, value: 12, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :group_password %>
    <%= f.text_field :group_password, placeholder: "Optional", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>