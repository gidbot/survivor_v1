<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center"> <%= @league.name %> </h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <table class="table">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
      </tr>
      </thead>
      <tbody>
        <% @league.users.each_with_index do |user, index| %>
          <tr>
            <th scope="row"><%= index %></th>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>